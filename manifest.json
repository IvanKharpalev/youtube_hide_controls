{
  "manifest_version": 2,
  "name": "YouTube Custom Script",
  "version": "1.1",
  "description": "Runs custom code on every YouTube page",
  "permissions": [
    "tabs",
    "https://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  }
}
